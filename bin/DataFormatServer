#!/bin/bash

echo "Using JAVA_HOME=$JAVA_HOME"
echo "Using TANGO_HOST=$TANGO_HOST"

XENV_ROOT=".."
echo "Using XENV_ROOT=$XENV_ROOT"

INSTANCE_NAME=test
echo "Using INSTANCE_NAME=$INSTANCE_NAME"

JAVA_OPTS="-server -Xmx1G -Xshare:off -XX:+UseG1GC"
echo "Using JAVA_OPTS=$JAVA_OPTS"

java $JAVA_OPTS -cp "$XENV_ROOT/lib/*:$XENV_ROOT/lib/DataFormatServer/*" hzg.wpn.tango.DataFormatServer $INSTANCE_NAME > $XENV_ROOT/var/log/DataFormatServer 2>&1 &